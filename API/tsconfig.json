{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "API/*": ["./src/*"]
    }
  }
}